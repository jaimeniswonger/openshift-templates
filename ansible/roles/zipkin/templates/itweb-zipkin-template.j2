apiVersion: v1
kind: Template
metadata:
  name: {{ app_name }}
  labels:
  annotations:
    description: A Template for ITWEB's Zipkin service
    iconClass: icon-spring
    tags: spring-boot, spring-cloud, itweb, development
    openshift.io/display-name: ITWEB - Zipkin
objects:
# IMAGE STREAM
- apiVersion: v1
  kind: ImageStream
  metadata:
    name: {{ app_name }}
    labels:
      app: {{ app_name }}
# BUILD CONFIG
- apiVersion: v1
  kind: BuildConfig
  metadata:
    name: {{ app_name }}
    labels:
      app: {{ app_name }}    
  spec:
    strategy:
      dockerStrategy:
        from:
          kind: ImageStreamTag
          name: 'itweb-springboot-runtime:latest'
      type: Docker
    source:
      type: Docker
      dockerfile: |-
        FROM itweb-springboot-runtime
        EXPOSE 9411
        RUN wget -O zipkin.jar 'https://search.maven.org/remote_content?g=io.zipkin.java&a=zipkin-server&v=LATEST&c=exec'
        RUN chown -R 1001:0 zipkin.jar
        USER 1001
        ENTRYPOINT ["java", "-jar", "zipkin.jar"]
    output:
      to:
        kind: ImageStreamTag
        name: {{ app_name }}:latest
    triggers:
    - imageChange: {}
    - type: ConfigChange
# DEPLOYMENT CONFIG
- apiVersion: v1
  kind: DeploymentConfig
  metadata:
    labels:
      app: {{ app_name }}
    name: {{ app_name }}
  spec:
    replicas: 1
    selector:
      app: {{ app_name }}
      deploymentconfig: {{ app_name }}
    strategy:
      activeDeadlineSeconds: 21600
      resources: {}
      rollingParams:
        intervalSeconds: 1
        maxSurge: 25%
        maxUnavailable: 25%
        timeoutSeconds: 600
        updatePeriodSeconds: 1
      type: Rolling
    template:
      metadata:
        labels:
          app: {{ app_name }}
          deploymentconfig: {{ app_name }}
      spec:
        containers:
        - imagePullPolicy: Always
          name: {{ app_name }}
          ports:
          - containerPort: 9411
            protocol: TCP
          resources: 
              requests: 
                cpu: {{ min_cpu }}
                memory: {{ min_memory }}
              limits:
                cpu: {{ max_cpu }}
                memory: {{ max_memory }}
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
        dnsPolicy: ClusterFirst
        restartPolicy: Always
        schedulerName: default-scheduler
        securityContext: {}
        terminationGracePeriodSeconds: 30
    test: false
    triggers:
    - type: ConfigChange
    - imageChangeParams:
        automatic: true
        containerNames:
        - {{ app_name }}
        from:
          kind: ImageStreamTag
          name: {{ app_name }}:latest
      type: ImageChange
  status:
    availableReplicas: 0
    latestVersion: 0
    observedGeneration: 0
    replicas: 0
    unavailableReplicas: 0
    updatedReplicas: 0
# SERVICE    
- apiVersion: v1
  kind: Service
  metadata:
    labels:
      app: {{ app_name }}
    name: {{ app_name }}
  spec:
    ports:
    - name: 9411-tcp
      port: 9411
      protocol: TCP
      targetPort: 9411
    selector:
      deploymentconfig: {{ app_name }}
    sessionAffinity: None
    type: ClusterIP
  status:
    loadBalancer: {}
# ROUTE    
- apiVersion: v1
  kind: Route
  metadata:
    labels:
      app: {{ app_name }}
    name: {{ app_name }}
  spec:
    host: ${ROUTE_HOST}
    port:
      targetPort: 9411-tcp
    to:
      kind: Service
      name: {{ app_name }}
      weight: 100
    wildcardPolicy: None
  status: {}