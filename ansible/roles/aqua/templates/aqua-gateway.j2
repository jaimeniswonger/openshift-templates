# SERVICE
apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}-gateway
  labels:
    app: {{ app_name }}
    template: {{ app_name }}-gateway
spec:
  ports:
    - nodePort: 30036
      port: 3622
      protocol: TCP
      targetPort: 3622
  selector:
    app: {{ app_name }}-gateway
  type: LoadBalancer
---
# DEPLOYMENT
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: {{ app_name }}-gateway
spec:
  template:
    metadata:
      labels:
        app: {{ app_name }}
        template: {{ app_name }}-gateway
      name: {{ app_name }}-gateway
    spec:
      serviceAccount: {{ app_name }}-account
      imagePullSecrets:
        - name: dockerhub
      containers:
      - name: {{ app_name }}-gateway
        image: {{ aqua_gateway_image }}
        securityContext:
          privileged: true
        env:
          - name: SCALOCK_GATEWAY_PUBLIC_IP
            value: {{ route_host }}
          - name: SCALOCK_DBUSER
            value: "postgres"
          - name: SCALOCK_DBPASSWORD
            value: "password"
          - name: SCALOCK_DBNAME
            value: "scalock"
          - name: SCALOCK_DBHOST
            value: {{ app_name }}-db.{{ openshift_project_name }}.svc
          - name: SCALOCK_DBPORT
            value: "5432"
          - name: SCALOCK_AUDIT_DBUSER
            value: "postgres"
          - name: SCALOCK_AUDIT_DBPASSWORD
            value: "password"
          - name: SCALOCK_AUDIT_DBNAME
            value: "slk_audit"
          - name: SCALOCK_AUDIT_DBHOST
            value: {{ app_name }}-db.{{ openshift_project_name }}.svc
          - name: SCALOCK_AUDIT_DBPORT
            value: "5432"
        volumeMounts:
          - mountPath: /var/run/docker.sock
            name: docker-socket-mount
        ports:
        - containerPort: 3622
      volumes:
        - name: docker-socket-mount
          hostPath:
            path: /var/run/docker.sock
