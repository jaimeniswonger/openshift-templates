apiVersion: v1
kind: Route
metadata:
  name: aqua-web
spec:
  host: aqua.awsos2.americancentury.com
  to:
    kind: Service
    name: aqua-web
---
apiVersion: v1
kind: Service
metadata:
  name: aqua-web
  labels:
    app: aqua-web
spec:
  ports:
    - nodePort: 30080
      port: 8080
      protocol: TCP
      targetPort: 8080
  selector:
    app: aqua-web
  type: LoadBalancer
